<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Activity.MainActivity">

    <LinearLayout
        android:id="@+id/details"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="1dp">

        <TextView
            android:id="@+id/welcomeText"
            android:layout_width="match_parent"
            android:layout_height="58dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:layout_marginTop="32dp"
            android:text="Select Primary Color:"
            android:textSize="18sp" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="10sp"
            android:layout_gravity="center"
            android:columnCount="2"
            android:rowCount="3">

            <Button
                android:id="@+id/primRedButton"
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:layout_margin="5sp"
                android:backgroundTint="@color/red_500"
                android:textStyle="bold" />

            <Button
                android:id="@+id/primOrangeButton"
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:layout_margin="5sp"
                android:backgroundTint="@color/orange_500"
                android:textStyle="bold" />

            <Button
                android:id="@+id/primGreenButton"
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:layout_margin="5sp"
                android:backgroundTint="@color/green_500"
                android:textStyle="bold" />

            <Button
                android:id="@+id/primTealButton"
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:layout_margin="5sp"
                android:backgroundTint="@color/teal_500"
                android:textStyle="bold" />

            <Button
                android:id="@+id/primBlueButton"
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:layout_margin="5sp"
                android:backgroundTint="@color/blue_500"
                android:textStyle="bold" />

            <Button
                android:id="@+id/primPurpleButton"
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:layout_margin="5sp"
                android:backgroundTint="@color/purple_500"
                android:textStyle="bold" />



        </GridLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginTop="0dp"
            android:text="Select Secondary (Font) Color:"
            android:textSize="18sp" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="10sp"
            android:layout_gravity="center"
            android:columnCount="2"
            android:rowCount="5">

            <Button
                android:id="@+id/secBlackButton"
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:layout_margin="5sp"
                android:textColor="@color/white"
                android:backgroundTint="@color/black"
                android:textStyle="bold" />

            <Button
                android:id="@+id/secWhiteButton"
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:layout_margin="5sp"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"
                android:textStyle="bold" />

        </GridLayout>

        <Button
            android:id="@+id/saveTheme"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Save Theme" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>